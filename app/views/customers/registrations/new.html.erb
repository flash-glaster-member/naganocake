<h2 class="bg-secondary">新規会員登録</h2>
      <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customerr', local: true do |f| %>
        <%= render "customers/shared/error_messages", resource: resource %>
        <table>
          <tr
        <div class="form-group row">
          <div class="col-sm-6">
          <%= f.label :lastname %><li>姓</li><br />
          <%= f.text_field :lastname,placeholder: "令和", autofocus: true, class: "lastname form-control" required="" type="text"　%>
        </div>

        <div class="col-sm-6">
          <%= f.label :firstname %><li>名</li><br />
          <%= f.text_field :firstname,placeholder: "道子", autofocus: true, class: "firstname form-control" required="" type="text" %>
        </div>

      　 <div class="col-sm-6">
          <%= f.label :kana_lastname %><li>名前</li><br />
          <%= f.text_field :kana_lastname,placeholder: "レイワ", autofocus: true, class: "kana_lastname form-control" required="" type="text" %>
        </div>

      　 <div class="col-sm-6">
          <%= f.label :kana_firsttname %><li>名前</li><br />
          <%= f.text_field :kana_firstname,placeholder: "ミチコ", autofocus: true, class: "kana_firstname form-control" required="" type="text" %>
        </div>

        <div class="field">
          <%= f.label :email %><li>メールアドレス</li><br />
          <%= f.email_field :email,placeholder: "sample@example.com", autofocus: true, class: "email" %>
        </div>

                <div class="field">
          <%= f.label :postcode %><li>郵便番号(ハイフンなし)</li><br />
          <%= f.text_field :postcode,placeholder: "０００００００", autofocus: true, class: "postcode" %>
        </div>

                <div class="field">
          <%= f.label :address %><li>住所</li><br />
          <%= f.text_field :address,placeholder: "東京都渋谷区代々木神園町０−０", autofocus: true, class: "address" %>
        </div>

        <div class="field">
          <%= f.label :password %><li>パスワード(6文字以上)</li>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "password" %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation %><li>パスワード(確認用)</li><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "password_confirm" %>
        </div>
        <div class="actions">
          <%= f.submit "新規登録" ,class: 'btn btn-sm btn-success' %>
        </div>
      <% end %>
      </table>
      <%= render "customers/shared/links" %>
    </div>
  </div>
</div>