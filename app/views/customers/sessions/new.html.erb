<h2 class="bg-gray-300">ログイン</h2>
<p　class="bg-gray-300">会員の方はこちらからログイン</p>
      <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customerr', local: true do |f| %>
  <div class="field">
    <%= f.label :email %><li>メールアドレス</li><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><li>パスワード</li><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
  <%= f.submit "ログイン" ,class: 'btn btn-sm btn-primary'%
  </div>
<% end %>

<%= render "customer/shared/links" %>

<p　class="bg-gray-300">会員の方はこちらからログイン</p>
