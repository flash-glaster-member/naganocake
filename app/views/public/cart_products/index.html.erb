<!--カート内商品表示-->
<div class='container px-5 px-sm-0'>
      <h2>ショッピングカート</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% total = 0 %>
          <% @cart_products.each do |f| %>
            <% product = Product.find(f.product_id) %>
            <% customer = Customer.find(f.customer_id)%>
            <tr>
              <td><%= image_tag product.get_product_image, size:'50x50' %></td>
              <td><%= product.name %></td>
              <td><%= product.price %></td>
              <%= form_with model: f do |form| %>
                <%= form.hidden_field :product_id, :value => product.id %>
                <%= form.hidden_field :customer_id, :value => customer.id %>

                <td>
                  <%= form.select :amount, *[1..10], {selected: f.amount} %>
                  <%= form.submit '変更'%>
                </td>
              <% end %>
              <td><%= f.subtotal %></td>
              <% total += f.subtotal%>
              <td><%= link_to "削除", cart_product_path(f.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= total  %>

      <%=  link_to products_path,class: 'nav-link text-light btn-info' do %>
        <button>買い物を続ける</button>
      <% end %>

      <%=  link_to new_order_path,class: 'nav-link text-light btn-info' do %>
        <button>情報入力へ進む</button>
      <% end %>
 </div>
