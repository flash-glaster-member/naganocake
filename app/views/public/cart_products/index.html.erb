<!--カート内商品表示-->
<div class="container">
  <div class="row">
    <div class="col-2">
    </div>
      <h5 class="d-flex justify-content-left mb-3 bg-secondary p-2 text-black">ショッピングカート</h5>
      <%= link_to cart_products_all_destroy_path, method: :delete, data: { confirm: '本当に消しますか？' } do %>
        <button class = "btn btn-sm btn-danger">カートを空にする</button>
      <% end %>
  </div>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% total = 0 %>
          <% @cart_products.each do |f| %>
            <% product = Product.find(f.product_id) %>
            <% customer = Customer.find(f.customer_id)%>
            <tr>
              <td><%= image_tag product.get_product_image, size:'50x50' %></td>
              <td><%= product.name %></td>
              <td><%= product.price %></td>
              <td>
              <%= form_with model: f do |form| %>
                <%= form.hidden_field :product_id, :value => product.id %>
                <%= form.hidden_field :customer_id, :value => customer.id %>
                  <%= form.select :amount, *[1..1000], {selected: f.amount},class: "btn btn-sm btn-light"%>
                  <%= form.submit '変更',class: "btn btn-sm btn-success"%>
              <% end %>
              </td>
              <td><%= f.subtotal %></td>
              <% total += f.subtotal%>
              <td>
                <%= link_to cart_product_path(f.id), method: :delete, data: { confirm: '本当に消しますか？' } do %>
                  <button class = "btn btn-sm btn-danger">削除</button>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
        <div class="row mb-5">
          <div class="col-1">
          </div>
            <%=  link_to root_path do %>
            <button class= 'btn btn-primary'>買い物を続ける</button>
            <% end %>
          <div class="col-6">
          </div>
            <h6 class="col-2">合計金額</h6>
            <%= total %>
        </div>
        <div class="row">
          <div class="col-5">
            <% if total != 0 %>
              <%=  link_to new_order_path do %>
              <button class= 'btn btn-success'>情報入力へ進む</button>
              <% end %>
            <% end %>
          </div>
        </div>
 </div>
