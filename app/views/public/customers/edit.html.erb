<%# public/customer/edit%>
<div class="container">
  <div class="row">
    <div class="col-1">
    </div>
       <h6 class="d-flex justify-content-left mb-5 bg-secondary p-2 text-black bg-opacity-10">会員情報編集</h6>
  </div>


        <%= form_with model: @customer, url: customer_path(current_customer.id), local: true do |f| %>

         <div class="field row mb-2">
          <%= f.label :氏名,class: "col-2"%>
          <%= f.text_field :lastname,  class: "col-3"%>
          <%= f.text_field :firstname,  class: "col-3 offset-md-1"%>
        </div>
        <div class="field row mb-2">
          <%= f.label :フリガナ,class: "col-2"%>
          <%= f.text_field :kana_last_name, class: "col-3"%>
          <%= f.text_field :kana_first_name, class: "col-3 offset-md-1"%>
        </div>
        <div class="field row mb-2">
          <%= f.label :郵便番号,class: "col-2"%>
          <%= f.text_field :postcode, class: "col-3" %>
        </div>
        <div class="field row mb-2">
          <%= f.label :住所,class: "col-2"%>
          <%= f.text_field :address, class: "col-7" %>
        </div>
        <div class="field row mb-2">
          <%= f.label :電話番号,class: "col-2"%>
          <%= f.text_field :phone_number, class: "col-3" %>
        </div>
        <div class="field row mb-2">
          <%= f.label :メールアドレス,class: "col-2"%>
          <%= f.email_field :email, class: "col-3" %>
        </div>

        <div class="field row mb-4 offset-md-2">
          
          <!--<div class="col-2 offset-md-2">-->
           <%= f.submit "変更内容を保存" , class: "col-2 btn btn-sm btn-success" %>
          <div class="col-1"></div>
          <!--<div class="col-2">-->
           <%= link_to "退会する" , quite_path, class: "col-2 btn btn-sm btn-success" %>
          <!--</div>-->
        </div>
      <% end %>



</div>