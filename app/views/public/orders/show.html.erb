<div class="container">
  <h4 class = "col-md-3 offset-md-1 bg-light">注文履歴詳細</h4>
  <div class = "row">

  <h5 class = "col-md-3">注文情報</h5>
  <h5 class = "col-md-3 offset-md-4">請求情報</h5>
  </div>
    <div class="row">

      <table class = "table-bordered border-width:3px col-md-7">
        <tr>
          <td class = "table-active">注文日</td>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td class = "table-active">配送先</td>
          <td>
            <%= "〒" + @order.post_code%><br>
            <%= @order.address %>
          </td>
        </tr>
        <tr>
          <td class = "table-active">支払方法</td>
          <td><%= @order.pay_way_i18n %></td>
        </tr>
        <tr>
          <td class = "table-active">ステータス</td>
          <td><%= @order.status_i18n %></td>
        </tr>
      </table>
      <table class = "table-bordered col-md-4 mx-2 mb-5 table-sm">
        <tr>
          <td class = "table-active">商品合計</td>
          <td><%= @order.total_price.to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <td class = "table-active">配送料</td>
          <td><%= @order.postage.to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <td class = "table-active">ご請求額</td>
          <td><%= (@order.total_price + @order.postage).to_s(:delimited) %>円</td>
        </tr>
        </table>
      </div>
      <div class = "row my-5">
        <table class = "col-md-8 table-bordered">
          <thead>
            <tr class = "table-active">
              <th>商品</th>
              <th>単価(税込)</th>
              <th>個数</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody>
            <% @order.order_details.each do |order| %>
             <tr>
               <td><%= Product.find(order.product_id).name %></td>
               <td><%= Product.find(order.product_id).price.to_s(:delimited) %>円</td>
               <td><%= order.amount %></td>
               <td><%= order.subtotal.to_s(:delimited) %>円</td>
             </tr>
            <% end %>
          </tbody>
        </table>
      </div>
</div>
