<div class="container">
  <div class="row">

      <h2>注文履歴詳細</h2>

          <caption>注文情報</caption>
           <table>
           <tr>
            <td>注文日</td>
            <td><%= @order.created_at %></td>
           </tr>
           <tr>
            <td>配送先</td>
            <td><%= @order.address %></td>
           </tr>
           <tr>
            <td>支払方法</td>
            <td><%= @order.pay_way_i18n %></td>
           </tr>
           <tr>
            <td>ステータス</td>
            <td><%= @order.status_i18n %></td>
           </tr>
           </table>

          <caption>請求情報</caption>
           <table>
           <tr>
            <td>商品合計</td>
            <td><%= @order.total_price %></td>
           </tr>
           <tr>
            <td>配送料</td>
            <td><%= @order.postage %></td>
           </tr>
           <tr>
            <td>ご請求額</td>
            <td><%= @order.total_price + @order.postage%></td>
           </tr>
         </table>


         <thead>
          <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
         </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |order| %>
           <tr>
             <td><%= Product.find(order.product_id).name %></td>
             <td><%= Product.find(order.product_id).price %></td>
             <td><%= order.amount %></td>
             <td><%= order.subtotal %></td>
           </tr>
          <% end %>
     </tbody>

 </div>
</div>
