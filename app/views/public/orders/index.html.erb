<%# orders/edit %>
<div class="container">

 <div class="row">
  <div class="col-12 px-5 px-sm-0 mx-auto">
    <h4 class = "col-md-3 offset-md-1 bg-light">注文履歴一覧</h2>
     <table class="table table-hover table-inverse table-sm table-bordered">

      <thead>
       <tr class=" table-secondary ">
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
       </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
         <tr>
           <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
           <td>
             <%= "〒" + order.post_code%><br>
             <%= order.address %>
           </td>
           <td>
             <% order.order_details.each do |item|%>
               <%= Product.find(item.product_id).name %><br/>
             <% end %>
           </td>
           <td><%= order.total_price.to_s(:delimited) %>円</td>
           <td><%= order.status_i18n %></td>
           <td>
             <%= link_to order_path(order),class: 'nav-link text-light' do %>
                 <button type="button" class="btn btn-info btn-sm">表示する</button>
             <% end %>
           </td>
         </tr>
        <% end %>
     </tbody>

   </table>
  </div>
 </div>