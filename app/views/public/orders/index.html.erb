<%# orders/edit %>
<div class="container">
  <div class="row">
    <div class="col-1">
    </div>
       <h6 class="d-flex justify-content-left mb-5 bg-secondary p-2 text-black bg-opacity-10">注文履歴一覧</h6>
  </div>

    <% if @customer.errors.any? %>
      <div id="error_explanation">
       <h2><%= @customer.errors.count %> errors prohibited this book from being saved:</h2>
        <ul>
         <% @customer.errors.full_messages.each do |message| %>
           <li><%= message %></li>
         <% end %>
        </ul>
      </div>
    <% end %>


    <table border="1" width="50%" height="200" class="table table-hover table-inverse">
      <thead>
       <tr>
        <th bgcolor="#cococo" width="10%">注文日</th>
        <th bgcolor="#cococo" width="30%">配送先</th>
        <th bgcolor="#cococo" width="10%">注文商品</th>
        <th bgcolor="#cococo" width="8%">支払金額</th>
        <th bgcolor="#cococo" width="10%">ステータス</th>
        <th bgcolor="#cococo" width="10%">注文詳細</th>
       </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
         <tr>
           <td><%= order.created_at %></td>
           <td><%= order.address %></td>
           <td><%= order.title%></td>
           <td><%= order.total_price %></td>
           <td><%= order.status %></td>
           <td> <%= f.submit "表示する", class:"btn btn-secondary" %></td>
         </tr>
        <% end %>
     </tbody>

   </table>
 </div>