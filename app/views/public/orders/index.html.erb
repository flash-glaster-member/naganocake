<%# orders/edit %>
<div class="container">

 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>配送先情報/一覧</h2>
     <table class="table table-hover table-inverse">

      <thead>
       <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
       </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
         <tr>
           <td><%= order.created_at %></td>
           <td><%= order.address %></td>
           <td><%= order.title%></td>
           <td><%= order.total_price %></td>
           <td><%= order.status %></td>
           <td> <%= f.submit "表示する", class:"btn btn-secondary" %></td>
         </tr>
        <% end %>
     </tbody>

   </table>
  </div>
 </div>