<div class="container">

 <% if @customer.errors.any? %>
   <div id="error_explanation">
    <h2><%= @customer.errors.count %> errors prohibited this book from being saved:</h2>
     <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
     </ul>
   </div>
 <% end %>

 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>配送先情報/一覧</h2>
     <table class="table table-hover table-inverse">

       <tbody>
        <%= form_with model: @address do |f| %>
        <tr>
          <td>郵便番号(ハイフンなし)</td>
          <td><%= f.text_field :post_code, class:'form-control postcode' %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address, class:'form-control addresses' %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :phone_number, class:'form-control phonenumber' %>
               <%= f.submit "新規登録", class:"btn btn-secondary" %></td>
        </tr>
        <% end %>
      </tbody>

      <thead>
       <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛先</th>
        <th colspan="3"></th>
       </tr>
      </thead>
      <tbody>
        <%= form_with model: @customer do |f| %>
         <tr>
           <td><%= customer.post_code %></td>
           <td><%= customer.address %></td>
           <td><%= cstomer.name %></td>
           <td> <%= f.submit "編集する", class:"btn btn-secondary" %> <%= f.submit "削除する", class:"btn btn-secondary" %></td>
         </tr>
        <% end %>
     </tbody>

   </table>
  </div>
 </div>