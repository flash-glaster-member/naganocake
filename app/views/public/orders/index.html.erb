<%# orders/edit %>
<div class="container">

 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>注文履歴一覧</h2></h2>
     <table class="table table-hover table-inverse">

      <thead>
       <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
       </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
         <tr>
           <td><%= order.created_at %></td>
           <td><%= order.address %></td>
           <td>
             <% order.order_details.each do |item|%>
               <%= Product.find(item.product_id).name %>
             <% end %>
           </td>
           <td><%= order.total_price %></td>
           <td><%= order.status %></td>
           <td>
             <%= link_to order_path(order),class: 'nav-link text-light' do %>
                 <button type="button" class="btn btn-light">表示する</button>
             <% end %>
           </td>
         </tr>
        <% end %>
     </tbody>

   </table>
  </div>
 </div>