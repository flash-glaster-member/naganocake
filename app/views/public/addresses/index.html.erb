<%# addresse/index %>
<div class="container">
  <div class="row">
    <div class="col-1">
    </div>
       <h6 class="d-flex justify-content-left mb-5 bg-secondary p-2 text-black bg-opacity-10">配送先一覧/一覧</h6>
  </div>

    <% if @customer.errors.any? %>
      <div id="error_explanation">
       <h2><%= @customer.errors.count %> errors prohibited this book from being saved:</h2>
        <ul>
         <% @customer.errors.full_messages.each do |message| %>
           <li><%= message %></li>
         <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @address do |f| %>
    　<div class="field row mb-2">
          <%= f.label :郵便番号（ハイフンなし）,class: "col-3"%>
          <%= f.text_field :post_code, class: "col-3" %>
        </div>
        <div class="field row mb-2">
          <%= f.label :住所,class: "col-3"%>
          <%= f.text_field :send_address, class: "col-7" %>
        </div>
        <div class="field row mb-2">
          <%= f.label :宛先,class: "col-3"%>
          <%= f.text_field :send_name, class: "col-3" %>
        <div class="col-3"></div>
          <%= f.submit "新規登録" ,class: "col-2 btn btn-sm btn-success" %>
        </div>
        <% end %>


     <table border="1" width="50%" height="200" class="table table-hover table-inverse">
      <thead>
       <tr>
        <th bgcolor="#cococo" width="10%">郵便番号</th>
        <th bgcolor="#cococo" width="30%">住所</th>
        <th bgcolor="#cococo" width="10%">宛先</th>
        <th bgcolor="#cococo" width="20%"></th>
       </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
         <tr>
           <td><%= address.post_code %></td>
           <td><%= address.send_address %></td>
           <td><%= address.send_name %></td>
           <td><%= link_to "編集する", edit_address_path(current_customer), class: "col-4 btn btn-default" %>
               <%= link_to "削除する", method: :delete, data: { confilm: "本当に削除しますか？" } ,class: "col-4 btn btn-sm btn-success" %>
           </td>
         </tr>
        <% end %>
     </tbody>

   </table>
  </div>
 </div>