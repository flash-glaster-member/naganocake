<div class="container">

 <% if @customer.errors.any? %>
   <div id="error_explanation">
    <h2><%= @customer.errors.count %> errors prohibited this book from being saved:</h2>
     <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
     </ul>
   </div>
 <% end %>

 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>配送先情報編集</h2>
     <table class="table table-hover table-inverse">

       <tbody>
        <%= form_with model: @address do |f| %>
        <tr>
          <td>郵便番号(ハイフンなし)</td>
          <td><%= f.text_field :postcode, class:'form-control postcode' %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address, class:'form-control addresses' %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :phone_number, class:'form-control phonenumber' %>
               <%= f.submit "新規登録", class:"btn btn-secondary" %></td>
        </tr>
        <% end %>
      </tbody>

   </table>
  </div>
 </div>