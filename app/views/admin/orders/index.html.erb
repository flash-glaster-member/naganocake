<%# orders/edit %>
<div class="container">

 <div>
  <div>
    <h2>注文履歴一覧</h2>
     <table>

      <thead>
       <tr>
        <th>注文日</th>
        <th>購入者</th>
        <th>注文数</th>
        <th>注文ステータス</th>
       </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
         <tr>
          <td>
          <%= link_to admin_order_path(order),class: 'nav-link' do %>
            <%= order.created_at %>
          <% end %>
          </td>
          <td><%= Customer.find(order.customer_id).customer_name %></td>
          <td><%= order.all_amount(order.id) %></td>
          <td><%= order.status_i18n %></td>
         </tr>
        <% end %>
     </tbody>

   </table>
  </div>
 </div>