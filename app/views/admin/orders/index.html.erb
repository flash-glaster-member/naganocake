<%# orders/edit %>
<div class="container">


  <div>
    <h3 class = "col-md-4 offset-md-1 bg-light">注文履歴一覧</h2>
     <table class = "table">

      <thead>
       <tr class=" table-secondary ">
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文数</th>
        <th>注文ステータス</th>
       </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
         <tr>
            <td>
            <%= link_to admin_order_path(order),class: 'nav-link' do %>
              <%= l order.created_at %>
            <% end %>
            </td>
            <td>
              <%=  link_to admin_customer_path(order.customer_id),class: 'nav-link' do %>
                <%= Customer.find(order.customer_id).customer_name %>
              <% end %>
            </td>
            <td><%= order.all_amount(order.id) %></td>
            <td><%= order.status_i18n %></td>
         </tr>
        <% end %>
        <%= paginate @orders %>
     </tbody>

   </table>
  </div>
 </div>
