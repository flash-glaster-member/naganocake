<div class="container">
  <div>

      <h3 class = "col-md-4 offset-md-1 bg-light">注文履歴詳細</h3>


         <table class = "table table-borderless table-sm">
          <tr>
            <td>購入者</td>
            <td>
              <%=  link_to admin_customer_path(@order.customer_id),class: 'nav-link' do %>
                <%= Customer.find(@order.customer_id).customer_name %>
              <% end %>
            </td>
         </tr>
         <tr>
            <td>注文日</td>
            <td><%= l @order.created_at %></td>
         </tr>
         <tr>
            <td>配送先</td>
            <td><%= '〒' + @order.post_code + @order.address %></td>
         </tr>
         <tr>
            <td>支払方法</td>
            <td><%= @order.pay_way_i18n %></td>
         </tr>
         <tr>
            <td>ステータス</td>
            <td>
              <%= form_with model: [:admin, @order] do |f| %>
                  <%= f.select :status, Order.statuses.keys.map {|k| [I18n.t("enums.order.status.#{k}"),k] } %>
                  <%= f.submit '更新', class: 'btn btn-success btn-sm'%>
              <% end %>
            </td>
         </tr>
           </table>
      <div class = "row">
      <table class='table table-hover table-inverse col-8 table-sm'>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |f| %>
            <tr>
              <td><%= Product.find(f.product_id).name %></td>
              <td><%= f.product_price %></td>
              <td><%= f.amount %></td>
              <td><%= f.amount*f.product_price %></td>
              <td>
                <%= form_with model: [:admin, f] do |form| %>
                    <%= form.select :production_status, OrderDetail.production_statuses.keys.map{|k| [I18n.t("enums.order_detail.production_status.#{k}"),k]} %>
                    <%= form.submit '更新' , class: 'btn btn-success btn-sm' %>
                <% end %>
              </td>
          <% end %>
        </tbody>
      </table>
      <table class = "col-4 d-flex align-items-end table table-sm table-borderless">
        <tr>
          <td>商品合計</td>
          <td><%= @order.total_price.to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <td>送料</td>
          <td><%= @order.postage.to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <td>請求金額合計</td>
          <td><%= (@order.total_price + @order.postage).to_s(:delimited) %>円<td>
        </tr>
      </table>
      </div>



 </div>
</div>
