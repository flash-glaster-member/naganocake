<h2>ジャンル一覧・追加</h2>

<%= form_with model: @genre,url:admin_genres_path do |f| %>
  <div class="form-group">
    <%= f.label :name, "ジャンル名" %>
    <%= f.text_field :name %>
    <%= f.submit '新規登録', class: 'btn btn-success' %>
  </div>
<% end %>

<table class='table'>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>


    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td>
        <%=  link_to edit_admin_genre_path(genre.id),class: 'nav-link text-light' do %>
          <button type="button" class="btn btn-light">編集</button>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>


