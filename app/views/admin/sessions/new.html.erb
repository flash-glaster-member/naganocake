<div class='container'>
  <div class='row'>
    <div class="col-2">
    </div>
      <h4 class="d-flex justify-content-left mb-5 bg-secondary p-2 text-black bg-opacity-10">管理者ログイン</h4>
  </div>
      <%= form_with model: @admin, url: session_path(resource_name), local: true do |f| %>
        <div class="field row mb-4">
          <div class="col-2"></div>
           <%= f.label :メールアドレス, class: "col-2"%>
           <%= f.email_field :email,placeholder: "sample@example.com", autofocus: true, autocomplete: "email", class: "col-4" %>
        </div>
        <div class="field row mb-4">
          <div class="col-2"></div>
           <%= f.label :パスワード, class: "col-2" %>
           <%= f.password_field :password, autocomplete: "off", class: "col-4"%>
        </div>
          <% if devise_mapping.rememberable? %>
        <div class="field row mb-1">
          <div class="col-2"></div>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
          <% end %>
        <div class="field row mb-4">
          <div class="col-4"></div>
          <%= f.submit "ログイン" ,class: 'col-1 btn btn-sm btn-primary'%>
        </div>
          <% end %>
    </
  </div>
</div>
