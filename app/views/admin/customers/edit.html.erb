<%# admin/customer/edit %>
<div class="container">
  <div class="row">
    <div class="col-1">
    </div>
     <h6 class="d-flex justify-content-left mb-5 bg-secondary p-2 text-black bg-opacity-10"><%= @customer.customer_name %>さんの会員情報</h6>
  </div>

      <%= form_with model: @customer, url: admin_customer_path(@customer.id), class: 'new_customerr', local: true do |f| %>
        <div class="field row mb-2">
          <%= f.label :会員ID,class: "col-2"%>
          <%= @customer.id %>
        </div>
        <div class="field row mb-2">
          <%= f.label :氏名,class: "col-2"%>
          <%= f.text_field :lastname,  class: "col-3"%>
          <%= f.label :　,class: "col-1"%>
          <%= f.text_field :firstname,  class: "col-3"%>
        </div>
        <div class="field row mb-2">
          <%= f.label :フリガナ,class: "col-2"%>
          <%= f.text_field :kana_last_name, class: "col-3"%>
          <%= f.label :　,class: "col-1"%>
          <%= f.text_field :kana_first_name, class: "col-3"%>
        </div>
        <div class="field row mb-2">
          <%= f.label :郵便番号,class: "col-2"%>
          <%= f.text_field :postcode, class: "col-3" %>
        </div>
        <div class="field row mb-2">
          <%= f.label :住所,class: "col-2"%>
          <%= f.text_field :address, class: "col-7" %>
        </div>

        <div class="field row mb-2">
          <%= f.label :メールアドレス,class: "col-2"%>
          <%= f.email_field :email, class: "col-3" %>
        </div>
        <div class="field row mb-2">
          <%= f.label :電話番号,class: "col-3"%>
          <%= f.text_field :phone_number, class: "col-3" %>
        </div>
        <div class="field row mb-2">
          <%= f.label :会員ステータス,class: "col-3"%>
          <%= f.radio_button :status, false , checked: true %>
          <%= f.label :有効 %>

          <%= f.radio_button :status, true %>
          <%= f.label :退会 %>
        </div>
        <div class="field row mb-4">
          <div class="col-2"></div>
          <%= f.submit "変更内容を保存" ,class: "col-2 btn btn-sm btn-success" %>
        </div>
       <% end %>

  </div>