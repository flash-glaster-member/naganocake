<%# admin/customer/show %>
<div class="container">
  <div class="row">
    <div class="col-1">
    </div>
       <h6 class="d-flex justify-content-left mb-5 bg-secondary p-2 text-black bg-opacity-10"><%= @customer.lastname%><%= @customer.firstname%>さんの会員情報</h6>
  </div>

     <table class="table table-hover table-inverse">
      <tbody>
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        <tr>
        <tr>
          <td>氏名</td>
          <td><%= @customer.lastname%><%= @customer.firstname%></td>
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.kana_last_name %><%= @customer.kana_first_name %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postcode %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
          <% if @customer.is_deleted? %>
            退会
          <% else %>
            有効
          <% end %>
          </td>
        </tr>
      </tbody>
     </table>

        <div class="field row mb-4">
          <div class="col-2"></div>
           <%= link_to "編集する", edit_admin_customer_path(@customer), class: "col-2 btn btn-default" %>
          </div>
        <div class="field row mb-4">
          <div class="col-2"></div>
           <%= link_to "注文履歴一覧を見る", admin_orders_path(@customer), class: "col-2 btn btn-default" %>
        </div>

  </div>
