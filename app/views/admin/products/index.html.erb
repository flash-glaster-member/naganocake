  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td></td>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>
