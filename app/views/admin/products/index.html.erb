<div class="container">
  <div class="row">
    <h2>商品一覧</h2>
    <div class='text-right'>
      <%= link_to "＋", new_admin_product_path, class: 'btn btn-light border-right border-bottom rounded-circle p-◯' %>
    </div>
  </div>
</div>



<table class='table'>
  <thead class='thead-light'>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th></th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= product.id %></td>
      <td>
        <%=  link_to admin_product_path(product.id), class: 'text-reset' do %>
          <%= product.name %>
        <% end %>
      </td>
      <td><%= product.price %></td>
      <td>
        <%= @genres.find(product.genre_id).name %>
      </td>
      <td>
        <% if product.is_active? %>
          <td class='text-success font-weight-bold'>販売中</td>
        <% else %>
          <td class='text-secondary font-weight-bold'>販売停止中</td>
        <% end %>
      </td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%=  link_to new_admin_product_path,class: 'nav-link text-light' do %>
  <button type="button" class="btn btn-light">商品追加</button>
<% end %>

<%= paginate @products %>
