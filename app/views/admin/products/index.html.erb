<h2>商品一覧</h2>

<%= link_to "+", new_admin_product_path, class: 'btn btn-primary rounded-circle p-0' %>
<table class='table'>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th></th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= product.id %></td>
      <td>
        <%=  link_to admin_product_path(product.id),class: 'nav-link' do %>
          <%= product.name %>
        <% end %>
      </td>
      <td><%= product.price %></td>

      <td>
        <%= @genres.find(product.genre_id).name %>
      </td>

      <td>
        <% if product.is_active? %>
          <td>販売中</td>
        <% else %>
          <td>販売停止中</td>
        <% end %>
      </td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%=  link_to new_admin_product_path,class: 'nav-link text-light' do %>
  <button type="button" class="btn btn-light">商品追加</button>
<% end %>
